<% reactions = ['🤦‍♂️', '😅', '😬', '¯\_(ツ)_/¯', '🤷‍♂️', '(╯°□°）╯︵ ┻━┻', '🙄', '🙈', '😩', '😫', '😐', '😑', '🤷‍♀️', '🤦‍♀️'] %>

<div id="palmy-form">
  <%= simple_form_for @palmy do |f| %>
    <%= f.input :description %>
    <%= f.input :author %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
</div>

<br>

<ul style='padding-left: 0px;'>
  <% @palmies.reverse.each do |palmy| %>
    <li class="card">
      <h2 class="content">
        <%= palmy.description %> <%= reactions.sample %>
      </h2>
      <h3 class="author">
        <strong>--<%= palmy.author %></strong>
      </h3>
    </li>
  <% end %>
</ul>